<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContohXamarinSep2020.MyTabbedPage" 
            Title="My Tabbed Page"
            xmlns:local="clr-namespace:ContohXamarinSep2020"
            NavigationPage.HasNavigationBar="False">
  <!--Pages can be added as references or inline-->
    <ContentPage Title="Tab 1">
        <StackLayout>
            <Label Text="Halaman Pertama" FontSize="Large" />
        </StackLayout>
    </ContentPage>
    <local:MainPage IconImageSource="ic_add.png" Title="Main Page" />
    <local:BindingImage IconImageSource="ic_add.png" Title="Binding Image" />
    <local:BindingToDataModel IconImageSource="ic_add.png" Title="Binding Data Model" />
</TabbedPage>