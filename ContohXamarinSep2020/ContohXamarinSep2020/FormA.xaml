<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContohXamarinSep2020.FormA" Title="Form A">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="entryData" Placeholder="masukan data yang dikirimkan" />
            <Button x:Name="btnKirim" Text="Kirim Ke Form B" 
                    Clicked="btnKirim_Clicked" />
            <Button x:Name="btnSimpanGlobal" Text="Simpan Global"
                    Clicked="btnSimpanGlobal_Clicked"/>
            <Button x:Name="btnGetPref" Text="Get Preference" Clicked="btnGetPref_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>