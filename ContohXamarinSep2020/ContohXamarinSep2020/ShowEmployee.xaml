<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContohXamarinSep2020.ShowEmployee"
             Title="Show Employee">
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="lvEmployee">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding EmpId,StringFormat='Employee ID: {0}'}"
                                  Detail="{Binding EmpName}" DetailColor="Blue" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>